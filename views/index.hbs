<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
        </li>
    </ol>

    <!-- Area Chart Example-->
    <div class="card mb-3">
        <div class="card-header">
        <i class="fas fa-chart-area"></i>
        Area Chart Example</div>
        <div class="card-body">
        <canvas id="myAreaChart" width="100%" height="30"></canvas>
        </div>
    </div>

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
        <i class="fas fa-table"></i>
        Danh sách sản phẩm</div>
        <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá (VNĐ)</th>
                    <th>Mô tả</th>
                    <th>Giảm giá</th>
                    <th>Đã bán</th>
                    <th>Danh mục</th>
                </tr>
              </thead>
              <tbody>
                {{#if productData}}
                {{#each productData}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.name}}</td>   
                    <td>{{this.price}}</td>
                    <td>{{this.content}}</td>
                    <td>{{this.discount}}</td>
                    <td>{{this.soldCount}}</td>
                    <td>{{this.categoryName}}</td>
                </tr>
                {{/each}}
                {{/if}}
              </tbody>
            </table>
        </div>
        </div>
    </div>
</div>